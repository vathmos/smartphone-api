generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Smartphone {
  id Int @id @default(autoincrement())
  brand String
  model String
  brief String
  released DateTime @db.Date
  announced DateTime @db.Date
  hardwareDesign String
  codename String
}